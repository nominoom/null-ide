{
  "name": "null-ide",
  "version": "3.1.0",
  "description": "The Ultimate Hacker's Code Editor & Security Toolkit - Cross-Platform IDE with 38 Tools + Discord RPC",
  "main": "dist/main/main.js",
  "author": "NullSec",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "package": "npm run build && electron-builder",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\""
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.3.0",
    "discord-rpc": "^4.0.1",
    "monaco-editor": "^0.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/discord-rpc": "^4.0.10",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.nullsec.null-ide",
    "productName": "Null IDE",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "null-ide.ico",
      "null-ide.png",
      "build/icon.png"
    ],
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Null IDE",
      "deleteAppDataOnUninstall": true,
      "perMachine": true,
      "menuCategory": true,
      "artifactName": "Null-IDE-Installer.exe"
    },
    "fileAssociations": [
      {
        "ext": "js",
        "name": "JavaScript",
        "role": "Editor"
      },
      {
        "ext": "ts",
        "name": "TypeScript",
        "role": "Editor"
      },
      {
        "ext": "tsx",
        "name": "TypeScript React",
        "role": "Editor"
      },
      {
        "ext": "jsx",
        "name": "JavaScript React",
        "role": "Editor"
      },
      {
        "ext": "py",
        "name": "Python",
        "role": "Editor"
      },
      {
        "ext": "java",
        "name": "Java",
        "role": "Editor"
      },
      {
        "ext": "cpp",
        "name": "C++",
        "role": "Editor"
      },
      {
        "ext": "c",
        "name": "C",
        "role": "Editor"
      },
      {
        "ext": "html",
        "name": "HTML",
        "role": "Editor"
      },
      {
        "ext": "css",
        "name": "CSS",
        "role": "Editor"
      },
      {
        "ext": "json",
        "name": "JSON",
        "role": "Editor"
      },
      {
        "ext": "md",
        "name": "Markdown",
        "role": "Editor"
      },
      {
        "ext": "txt",
        "name": "Text",
        "role": "Editor"
      }
    ],
    "mac": {
      "icon": "null-ide.ico",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development",
      "maintainer": "NullSec <nullsec@example.com>",
      "vendor": "NullSec",
      "synopsis": "The Ultimate Hacker's Code Editor & Security Toolkit",
      "description": "Professional IDE combining Monaco code editor with 38 security testing and developer tools. Privacy-focused with local-only data storage.",
      "desktop": {
        "Name": "Null IDE",
        "Comment": "The Ultimate Hacker's Code Editor & Security Toolkit",
        "Icon": "null-ide",
        "Type": "Application",
        "Categories": "Development;IDE;TextEditor;Security;",
        "Terminal": false,
        "StartupWMClass": "Null IDE"
      }
    }
  }
}
